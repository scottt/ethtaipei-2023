{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "es5",
    "downlevelIteration": true,
    "lib": [
      "es2017",
      "es6",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*.ts"
  ]
}
